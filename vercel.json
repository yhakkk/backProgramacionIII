{
    "functions": {
      "api/*": {
        "maxDuration": 10
      }
    },
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    
    ],
      "routes": [
          {
              "src": "/(.*)",
              "dest": "/",
              "methods": [
                  "GET",
                  "POST",
                  "PUT",
                  "PATCH",
                  "DELETE",
                  "OPTIONS"
              ]
          }
      ]
  }

